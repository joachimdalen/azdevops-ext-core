{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "strict": true,
    "module": "amd",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/__mocks__",
    "src/__tests__"
  ]
}